{
    "name": "Ctrl+Z for YouTube",
    "version": "0.1",
    "description": "Ever misclicked number keys while watching video and rewinded your movie? You can cancel it now!",
    "manifest_version": 2,
    "background": {
      "scripts": ["background.js"],
      "persistent": false
  },
  "commands": {
      "cancel": {
        "suggested_key": {
          "default": "Ctrl+Z"
        },
        "description": "Resets video cursor to the latest moment before rewind"
        }
    },
  "content_scripts":
  [
    {
          "matches": ["*://*.youtube.com/*"],
          "js": ["contentscript.js"],
          "all_frames": true,
          "run_at": "document_idle"
    }
  ],
  "permissions": ["*://*.youtube.com/*"],
  "icons": {"128": "icon128.png"}
}
